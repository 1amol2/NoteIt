<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style
            name="AppTheme"
            parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/dark_green_bar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item
                name="android:statusBarColor"
                tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>

        <!-- Customize your theme here. -->
    </style>
    <style
            name="NoteActivityStyle"
            parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item
                name="android:statusBarColor"
                tools:targetApi="l">@color/green</item>
        <!-- Customize your theme here. -->
    </style>

    <style
            name="Widget.App.PopupMenu"
            parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/custom_popupmenu_background</item>
    </style>
</resources>
